<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.tshare" name="Tshare" version="0.4.0" provider-name="Tomas">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="kontext_menu" version="1.0.0"/>
            <import addon="script.module.unidecode" version="0.4.16"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="cs">Tshare</summary>
            <description lang="cs">Doplněk pro sledování obsahu z webshare.cz</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>

    <addon id="kontext_menu" name="Kontext menu" version="1.0.0" provider-name="Tomas">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="kodi.context.item">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="cs">Kontextová nabídka pro Tmdb</summary>
            <description lang="cs">Přidává „Vyhledat celý seriál“ do kontextové nabídky.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>





